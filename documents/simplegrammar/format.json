{
    "grammar": {
      "debut": "start",
      "fin": "fin",
      "mot": {
        "type": "alpha",
        "min": 1,
        "max": null
      },
      "nombre": {
        "type": "digit",
        "min": 1,
        "max": null
      },
      "ponct": ["comma", "dot", "exclamation", "question", "colon"],
      "separateur": ["space", "htab", "-", "_"],
      "message": {
        "sequence": [
          { "element": "debut" },
          { "element": "mot", "repeat": { "min": 2, "max": null }, "separator": ["ponct", "separateur"] },
          { "element": ["nombre", "separateur"], "repeat": { "min": 0, "max": null } },
          { "element": "ponct", "optional": true },
          { "element": "fin" },
          "lf"
        ]
      }
    }
  }
  